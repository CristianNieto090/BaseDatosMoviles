<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Bases de datos - Añadir Producto"
        android:textSize="25dp"
        android:textAlignment="center"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Rellena los campos con el dato que deseas añadir"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:backgroundTint="#9b9b9b"
        android:text="Atras"
        android:textSize="15dp"
        android:onClick="onAtrasAddProducto"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Nombre Producto:"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/AddProductoNombre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ingresa el nombre aquí"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Precio Producto:"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/AddProductoPrecio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ingresa el precio aquí"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Marca Producto:"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/AddProductoMarca"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ingresa el nombre de la marca"/>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:backgroundTint="#9b9b9b"
        android:text="Añadir"
        android:textSize="15dp"
        android:onClick="onProductoA"/>

    </LinearLayout>
